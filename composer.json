{
    "name": "vincentlanglet/twig-cs-fixer",
    "type": "coding-standard",
    "description": "A tool to automatically fix Twig code style",
    "homepage": "https://github.com/VincentLanglet/Twig-CS-Fixer",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Langlet"
        }
    ],
    "bin": ["bin/twig-cs-fixer"],
    "require": {
        "php": ">=7.3",
        "ext-mbstring": "*",
        "symfony/console": "^4.4 || ^5.0",
        "symfony/finder": "^4.4 || ^5.0",
        "symfony/twig-bridge": "^4.4 || ^5.0",
        "twig/twig": "^2.13.1 || ^3.0.5"
    },
    "require-dev": {
        "infection/infection": "^0.17 || ^0.24",
        "phpstan/phpstan": "^0.12.95",
        "phpstan/phpstan-phpunit": "^0.12.20",
        "phpstan/phpstan-strict-rules": "^0.12.10",
        "phpstan/phpstan-symfony": "^0.12.41",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "psalm/plugin-symfony": "^3.0.1",
        "vimeo/psalm": "^4.9.3",
        "vincentlanglet/symfony-custom-coding-standard": "^9.1.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "TwigCsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TwigCsFixer\\PHPStan\\": ".phpstan/",
            "TwigCsFixer\\Tests\\": "tests/"
        }
    }
}
