{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "src"
        ]
    },
    "mutators": {
        "@default": true,
        "global-ignoreSourceCodeByRegex": [
            "\\assert\\(.*",
            "throw new LogicException\\(.*"
        ]
    },
    "logs": {
        "text": "infection.log",
        "stryker": {
            "report": "main"
        }
    }
}
